{
  "manifest_version": 3,
  "name": "Cookie Guard",
  "version": "1.0.0",
  "description": "A browser extension to manage and control cookie consent banners",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cookies_tests/test_banner_readability.js", "cookies_tests/test_layering.js", "cookies_tests/test_withdraw_icon.js"],
      "css": ["popup.css"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}