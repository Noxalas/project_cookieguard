{
  "manifest_version": 3,
  "name": "Cookie Guard",
  "version": "1.0.0",
  "description": "A browser extension to manage and control cookie consent banners",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
	"web_accessible_resources": [
		{
			"resources": [
				"cookies_tests/*.mjs"
			],
			"matches": ["<all_urls>"]
		}
	],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["test_runner.mjs"],
      "css": ["popup.css"],
			"run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
